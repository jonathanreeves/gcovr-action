{
  "name": "gcovr-action",
  "version": "1.0.0",
  "private": true,
  "description": "Generate code coverage reports for a C++ project using gcovr",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "all": "npm run format && npm run lint && npm run build && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/threeal/gcovr-action.git"
  },
  "keywords": [
    "actions",
    "c",
    "coverage",
    "cpp",
    "gcov",
    "testing"
  ],
  "author": "Alfi Maulana <alfi.maulana.f@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "eslint-plugin-github": "^4.6.0",
    "typescript": "^4.9.4"
  }
}
