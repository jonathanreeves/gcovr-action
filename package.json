{
  "name": "gcovr-action",
  "version": "1.0.0",
  "private": true,
  "description": "Generate code coverage reports for a C++ project using gcovr",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --runInBand",
    "all": "npm run format && npm run lint && npm run build && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/threeal/gcovr-action.git"
  },
  "keywords": [
    "actions",
    "c",
    "coverage",
    "cpp",
    "gcov",
    "testing"
  ],
  "author": "Alfi Maulana <alfi.maulana.f@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/cache": "^3.1.2",
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/io": "^1.1.2",
    "ansi-styles": "^6.2.1",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/tmp": "^0.2.3",
    "@vercel/ncc": "^0.36.1",
    "eslint-plugin-github": "^4.6.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.4.1",
    "tmp": "^0.2.1",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  }
}
